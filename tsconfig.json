{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": "api",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "types": ["node"],
    "skipLibCheck": true
  },
  "include": ["api/**/*.ts"]
}
